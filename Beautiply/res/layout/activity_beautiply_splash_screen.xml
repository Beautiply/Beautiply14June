<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashScreenRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/papergrad"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BeautiplySplashScreenActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" >

        <ImageView
            android:id="@+id/splashScreenBeautiplyLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/splashScreenBeautiplyText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/splashScreenBeautiplyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Beautiply"
            android:textSize="40dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/splashScreenMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="The images used in the application may contain explicit content.All the images supplied by the application are the copyright property of their respective owner.CMC is not resposible for any copyright issues."
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/splashScreenCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/splashScreenMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:text="Copyright Â© CMC Delhi,2014"
        android:textColor="@android:color/white" />

</RelativeLayout>